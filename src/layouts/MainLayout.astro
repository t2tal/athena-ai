---
// src/layouts/MainLayout.astro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
        <link rel="icon" type="image/x-icon" href="/ai.png">
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Quicksand:wght@300;400;600&display=swap');
        </style>
	</head>
	<body>
        <slot />

        <footer>
            <p>&copy; 2025 Study Buddy Project. Designed & Engineered by Talia Solla.</p>
        </footer>
	</body>
</html>

<style is:global>
    /* --- GLOBAL THEME VARIABLES --- */
    :root {
        --bg-color: #0d0d12;       /* Deep Hacker Dark */
        --text-color: #e0e0e0;     /* Soft White */
        --accent-color: #8b5cf6;   /* Violet */
        --card-bg: #1a1a23;        /* Dark Grey for cards */
    }

    /* Resets */
    body {
        margin: 0;
        padding: 0;
        background-color: var(--bg-color); 
        color: var(--text-color);
        font-family: 'Quicksand', system-ui, sans-serif; /* Using your font preference */
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    /* Footer */
    footer {
        margin-top: auto;
        text-align: center;
        padding: 20px;
        font-size: 0.8rem;
        opacity: 0.6;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        background: rgba(13, 13, 18, 0.95);
        color: #888;
    }
    
    /* Global Badge/Button Styles (Optional Utility) */
    .highlight {
        color: var(--accent-color);
        font-weight: bold;
    }
</style>